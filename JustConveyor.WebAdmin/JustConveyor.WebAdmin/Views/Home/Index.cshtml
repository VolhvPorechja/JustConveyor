@{
    ViewData["Title"] = "Home Page";
}
<div id="server-selector" class="row elements">
    <div class="col-md-6 col-md-offset-2">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4" for="service-address">Service address: </label>
                <div class="col-sm-8">
                    <input id="service-address" class="form-control input-sm" v-model="server"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-sm" v-on:click="loadData">Load data</button>
            </div>
            <div class="col-md-6">
                <label class="checkbox-inline pull-left autoupdate-checkbox">
                    <input type="checkbox" v-model="autoupdateFlag" v-on:change="autoupdateChanged"/>
                    Autoupdate
                </label>
            </div>
        </div>
    </div>
</div>
<div id="main-text" class="row">
    <div class="row">
        <table class="table table-striped">
            <tbody>
            <tr>
                <td class="col-md-2">Started:</td>
                <td>{{started}}</td>
            </tr>
            <tr>
                <td>IsFlight:</td>
                <td>{{inflight}}</td>
            </tr>
            <tr>
                <td>Last data update:</td>
                <td>{{lastUpdate}}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-3 elements">
            <div class="list-group">
                <a href="#" class="list-group-item" v-on:click="showBlueprintInfo">Blueprints<span align="center" class="counter pull-right">{{blueprintsTable.values.length}}</span></a>
                <a href="#" class="list-group-item" v-on:click="showPipelinesInfo">Pipelines<span align="center" class="counter pull-right">{{pipelinesTable.values.length}}</span></a>
                <a href="#" class="list-group-item" v-on:click="showQueuesInfo">Queues<span align="center" class="counter pull-right">{{queuesTable.values.length}}</span></a>
                <a href="#" class="list-group-item" v-on:click="showContextsInfo">Contexts<span align="center" class="counter pull-right">{{contextsTable.values.length}}</span></a>
                <a href="#" class="list-group-item" v-on:click="showSuppliersInfo">Suppliers<span align="center" class="counter pull-right">{{suppliersTable.values.length}}</span></a>
                <a href="#" class="list-group-item" v-on:click="showLoggersInfo">Loggers<span align="center" class="counter pull-right">{{loggersTable.values.length}}</span></a>
            </div>
        </div>
        <div class="col-md-9 elements">
            <div class="row" v-if="visibleInfo == 'blueprints'">
                <vue-bootstrap-table
                    :width="'500px'"
                    :columns="blueprintsTable.columns"
                    :values="blueprintsTable.values"
                    :show-filter="blueprintsTable.showFilter"
                    :show-column-picker="blueprintsTable.showPicker"
                    :paginated="blueprintsTable.paginated"
                    :multi-column-sortable="blueprintsTable.multiColumnSortable">
                </vue-bootstrap-table>
            </div>
            <div class="row" v-if="visibleInfo == 'pipelines'">
                <vue-bootstrap-table
                    :columns="pipelinesTable.columns"
                    :values="pipelinesTable.values"
                    :show-filter="pipelinesTable.showFilter"
                    :show-column-picker="pipelinesTable.showPicker"
                    :paginated="pipelinesTable.paginated"
                    :multi-column-sortable="pipelinesTable.multiColumnSortable">
                </vue-bootstrap-table>
            </div>
            <div class="row" v-if="visibleInfo == 'queues'">
                <vue-bootstrap-table
                    :columns="queuesTable.columns"
                    :values="queuesTable.values"
                    :show-filter="queuesTable.showFilter"
                    :show-column-picker="queuesTable.showPicker"
                    :paginated="queuesTable.paginated"
                    :multi-column-sortable="queuesTable.multiColumnSortable">
                </vue-bootstrap-table>
            </div>
            <div class="row" v-if="visibleInfo == 'contexts'">
                <vue-bootstrap-table
                    :columns="contextsTable.columns"
                    :values="contextsTable.values"
                    :show-filter="contextsTable.showFilter"
                    :show-column-picker="contextsTable.showPicker"
                    :paginated="contextsTable.paginated"
                    :multi-column-sortable="contextsTable.multiColumnSortable">
                </vue-bootstrap-table>
            </div>
            <div class="row" v-if="visibleInfo == 'suppliers'">
                <vue-bootstrap-table
                    :columns="suppliersTable.columns"
                    :values="suppliersTable.values"
                    :show-filter="suppliersTable.showFilter"
                    :show-column-picker="suppliersTable.showPicker"
                    :paginated="suppliersTable.paginated"
                    :multi-column-sortable="suppliersTable.multiColumnSortable">
                </vue-bootstrap-table>
            </div>
            <div class="row" v-if="visibleInfo == 'loggers'">
                <div class="col-md-12">
                    <div class="row">
                        <vue-bootstrap-table
                            :columns="loggersTable.columns"
                            :values="loggersTable.values"
                            :show-filter="loggersTable.showFilter"
                            :show-column-picker="loggersTable.showPicker"
                            :row-click-handler="loggerSelected"
                            :paginated="loggersTable.paginated"
                            :multi-column-sortable="loggersTable.multiColumnSortable">
                        </vue-bootstrap-table>
                    </div>
                    <h2>Last logs</h2>
                    <div class="row logs-area">
                        <textarea id="logs-textarea" v-model="lastLogs"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>